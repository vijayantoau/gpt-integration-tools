{
  "name": "GPT Integration Tools",
  "description": "Weather, calculator, text analysis, and file search tools",
  "url": "https://gptintegration-e69rou9f1-vijays-projects-83d7f1fb.vercel.app",
  "protocol": "MCP",
  "endpoints": {
    "mcp": "/mcp",
    "tools": "/mcp/tools",
    "health": "/health",
    "manifest": "/manifest"
  },
  "authentication": {
    "type": "none"
  },
  "tools": [
    {
      "name": "weather",
      "description": "Get current weather information for any location",
      "parameters": {
        "location": {
          "type": "string",
          "description": "The city or location to get weather for"
        },
        "units": {
          "type": "string",
          "enum": ["celsius", "fahrenheit"],
          "default": "celsius"
        }
      }
    },
    {
      "name": "calculator",
      "description": "Perform mathematical calculations",
      "parameters": {
        "expression": {
          "type": "string",
          "description": "Mathematical expression to evaluate"
        }
      }
    },
    {
      "name": "text_analysis",
      "description": "Analyze text for sentiment, word count, or summary",
      "parameters": {
        "text": {
          "type": "string",
          "description": "Text to analyze"
        },
        "analysis_type": {
          "type": "string",
          "enum": ["sentiment", "word_count", "summary"],
          "default": "sentiment"
        }
      }
    },
    {
      "name": "file_search",
      "description": "Search for files in the system",
      "parameters": {
        "query": {
          "type": "string",
          "description": "Search query for files"
        },
        "file_type": {
          "type": "string",
          "description": "Optional file type filter"
        }
      }
    }
  ]
}


